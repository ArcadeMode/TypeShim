<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>  
  
  <PropertyGroup>
    <GeneratorProjectName>TypeShim.Generator</GeneratorProjectName>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>TypeShim</PackageId>
    <Version>0.0.1</Version>
    <Authors>ArcadeMode</Authors>
    <Product>TypeShim</Product>
    <Description>Typesafe .NET ↔︎ TypeScript interop</Description>
    <PackageTags>wasm, csharp, typescript, interop, generated</PackageTags>
    <RepositoryUrl>https://github.com/ArcadeMode/TypeShim</RepositoryUrl>
    <PackageProjectUrl>https://github.com/ArcadeMode/TypeShim</PackageProjectUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <None Include="pack/TypeShim.targets" Pack="true" PackagePath="build" />
    <Content Include="pack/**/*.*" Pack="true" PackagePath="build" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\TypeShim.Analyzers\bin\$(Configuration)\$(TargetFramework)\TypeShim.Analyzers.dll"
          Pack="true"
          PackagePath="analyzers/dotnet/cs" />
  </ItemGroup>

  <!--<Target Name="BuildAnalyzers" BeforeTargets="Build" DependsOnTargets="RestoreAnalyzers">
    <Message Text="Building TypeShim.Analyzers project..." Importance="high" />
    <MSBuild Projects="..\TypeShim.Analyzers\TypeShim.Analyzers.csproj"
             Targets="Build"
             Properties="Configuration=$(Configuration);Platform=$(Platform)" />
  </Target>

  <Target Name="RestoreAnalyzers" BeforeTargets="Build;Pack">
    <Message Text="Restoring TypeShim.Analyzers project..." Importance="high" />
    <MSBuild Projects="..\TypeShim.Analyzers\TypeShim.Analyzers.csproj"
             Targets="Restore"
             Properties="Configuration=$(Configuration);Platform=$(Platform)" />
  </Target>-->
  
  <Target Name="BuildGenerator" BeforeTargets="Build">
    <Message Text="Building TypeShim.Generator project..." Importance="high" />
    <!-- this enables building the generator without referencing its code, making it easier to pack -->
    <MSBuild Projects="../$(GeneratorProjectName)/$(GeneratorProjectName).csproj"
             Targets="Build"
             Properties="Configuration=$(Configuration);Platform=$(Platform);OutputPath=pack" />
    <ItemGroup>
      <GeneratorFiles Include="../$(GeneratorProjectName)/pack/**/*.*" />
    </ItemGroup>
    <Copy SourceFiles="@(GeneratorFiles)" DestinationFolder="$(ProjectDir)/pack/" />
  </Target>
</Project>