<Project Sdk="Microsoft.NET.Sdk.WebAssembly">

  <Import Project="../TypeShim/DotnetWasmTypescript.InteropGenerator.targets" />
  
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Library</OutputType>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

  <PropertyGroup>
    <WasmBundlerFriendlyBootConfig>true</WasmBundlerFriendlyBootConfig>
    <WasmFingerprintAssets>false</WasmFingerprintAssets>
    <CompressionEnabled>false</CompressionEnabled>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\TypeShim\TypeShim.csproj" />
    <ProjectReference Include="..\QR.Core\QR.Core.csproj" />
    <!--<ProjectReference Include="..\TypeScriptExportGenerator\TypeScriptExport.Analyzers.csproj" OutputItemType="Analyzer" />-->
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\exported-types.ts">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
